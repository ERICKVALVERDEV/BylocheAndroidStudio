<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.valverde.byloche.RegistroActivity"
    android:background="@color/colorPrimaryApp">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/colorPrimaryApp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="85dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/logo" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="5dp">

                 <GridLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:rowCount="10"
                     android:columnCount="1"
                     android:orientation="vertical"
                     android:layout_margin="15dp">

                     <TextView
                         android:id="@+id/textView22"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_below="@+id/imageView2"
                         android:layout_alignParentStart="true"
                         android:layout_centerHorizontal="true"
                         android:layout_marginTop="30dp"
                         android:fontFamily="@font/alegreya_sans"
                         android:text="@string/re_text"
                         android:textColor="@color/colornegro"
                         android:textSize="30sp"
                         android:layout_row="0"
                         android:layout_column="0"
                         android:layout_gravity="center_horizontal"/>


                     <EditText
                         android:id="@+id/txt_nombre"
                         style="@style/Widget.AppCompat.AutoCompleteTextView"
                         android:layout_width="350dp"
                         android:layout_height="wrap_content"
                         android:layout_row="1"
                         android:layout_column="0"
                         android:layout_below="@+id/textView19"
                         android:layout_alignParentStart="true"
                         android:layout_centerHorizontal="true"
                         android:layout_gravity="center_horizontal"
                         android:drawableEnd="@drawable/ic_apellido"
                         android:ems="10"
                         android:hint="@string/re_Nombre"
                         android:inputType="textPersonName" />

                     <EditText
                         android:id="@+id/txt_apellido"
                         android:layout_width="350dp"
                         android:layout_height="wrap_content"
                         android:layout_row="2"
                         android:layout_column="0"
                         android:layout_below="@+id/imageView2"
                         android:layout_alignParentEnd="true"
                         android:layout_gravity="center_horizontal"
                         android:layout_marginTop="10dp"
                         android:layout_toEndOf="@+id/txt_nombre"
                         android:drawableEnd="@drawable/ic_apellido"
                         android:ems="10"
                         android:hint="@string/re_Apellido"
                         android:inputType="textPersonName" />

                     <EditText
                         android:id="@+id/txt_email"
                         android:layout_width="350dp"
                         android:layout_height="wrap_content"
                         android:layout_row="3"
                         android:layout_column="0"
                         android:layout_below="@+id/txt_nombre"
                         android:layout_alignParentStart="true"
                         android:layout_centerHorizontal="true"
                         android:layout_gravity="center_horizontal"
                         android:layout_marginTop="10dp"
                         android:drawableEnd="@drawable/ic_email"
                         android:ems="10"
                         android:hint="@string/re_email"
                         android:inputType="textEmailAddress" />


                     <EditText
                         android:id="@+id/txt_contra"
                         android:layout_width="350dp"
                         android:layout_height="wrap_content"
                         android:layout_row="4"
                         android:layout_column="0"
                         android:layout_below="@+id/txt_email"
                         android:layout_alignParentStart="true"
                         android:layout_centerHorizontal="true"
                         android:layout_gravity="center_horizontal"
                         android:layout_marginTop="10dp"
                         android:drawableEnd="@drawable/ic_password"
                         android:ems="10"
                         android:hint="@string/re_password"
                         android:inputType="textPassword" />


                     <EditText
                         android:id="@+id/txt_contraconfir"
                         android:layout_width="350dp"
                         android:layout_height="wrap_content"
                         android:layout_row="5"
                         android:layout_column="0"
                         android:layout_below="@+id/txt_contra"
                         android:layout_alignParentStart="true"
                         android:layout_centerHorizontal="true"
                         android:layout_gravity="center_horizontal"
                         android:layout_marginTop="10dp"
                         android:drawableEnd="@drawable/ic_password"
                         android:ems="10"
                         android:hint="@string/re_confirassword"
                         android:inputType="textPassword" />

                     <EditText
                         android:id="@+id/txt_telef"
                         android:layout_width="350dp"
                         android:layout_height="wrap_content"
                         android:layout_row="6"
                         android:layout_column="0"
                         android:layout_below="@+id/txt_contraconfir"
                         android:layout_alignParentStart="true"
                         android:layout_alignParentEnd="true"
                         android:layout_gravity="center_horizontal"
                         android:layout_marginTop="10dp"
                         android:drawableEnd="@drawable/ic_telefono"
                         android:ems="10"
                         android:hint="@string/re_telefono"
                         android:inputType="phone" />

                     <TextView
                         android:id="@+id/textView24"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_below="@+id/btn_registrar"
                         android:layout_alignParentStart="true"
                         android:layout_centerHorizontal="true"
                         android:layout_marginTop="15dp"
                         android:fontFamily="@font/alegreya_sans"
                         android:gravity="center"
                         android:text="@string/re_text2"
                         android:textColor="@color/colornegro"
                         android:layout_row="7"
                         android:layout_column="0"
                         android:layout_gravity="center_horizontal"/>

                     <Button
                         android:id="@+id/btn_sesion"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_row="8"
                         android:layout_column="0"
                         android:layout_gravity="center_horizontal"
                         android:layout_weight="0"
                         android:background="#00FFFFFF"
                         android:text="@string/re_text3"
                         android:textColor="@color/black" />

                     <Button
                         android:id="@+id/btn_registrar"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_row="9"
                         android:layout_column="0"
                         android:layout_below="@+id/txt_telef"
                         android:layout_alignParentStart="true"
                         android:layout_alignParentEnd="true"
                         android:layout_centerHorizontal="true"
                         android:layout_gravity="center_horizontal"
                         android:layout_marginTop="28dp"
                         android:background="#BBC3DA"
                         android:text="@string/re_boton" />
                 </GridLayout>

            </androidx.cardview.widget.CardView>




        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>