<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="10dp"
    android:background="@color/colorcrema"
    android:elevation="6dp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/colorcrema"
    app:cardCornerRadius="10dp"
    android:id="@+id/cardViewCarrito">

    <TextView
        android:id="@+id/txt_datos_list"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/colorcrema"
        android:padding="10dp"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_eliminarPro"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="clip_horizontal|center_vertical|end"
        android:background="@drawable/ic_close_24" />

</androidx.cardview.widget.CardView>